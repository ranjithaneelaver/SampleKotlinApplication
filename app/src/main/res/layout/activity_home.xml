<?xml version="1.0" encoding="utf-8"?>
<layout>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.view.HomeActivity">


    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@android:color/white"
        android:id="@+id/txtvariables"
        android:gravity="center"
        android:text="@string/variables"
        android:layout_width="wrap_content"
        android:layout_margin="10dp"
        android:layout_height="50dp"/>


    <TextView
        app:layout_constraintTop_toTopOf="parent"
        android:background="@android:color/white"
        android:id="@+id/txtscopefun"
        app:layout_constraintLeft_toRightOf="@+id/txtvariables"
        android:gravity="center"
        android:layout_margin="10dp"
        android:text="@string/scopefunction"
        android:layout_width="wrap_content"
        android:layout_height="50dp"/>

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        android:background="@android:color/white"
        android:id="@+id/txtextention"
        android:layout_margin="10dp"
        app:layout_constraintLeft_toRightOf="@+id/txtscopefun"
        android:gravity="center"
        android:text="@string/variables"
        android:layout_width="wrap_content"
        android:layout_height="50dp"/>





</androidx.constraintlayout.widget.ConstraintLayout>
</layout>